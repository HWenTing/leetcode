class T637 {
    public List<Double> averageOfLevels(TreeNode root) {
        List<Double> ans=new ArrayList<>();
        if(root==null){
            return ans;
        }
        Queue<TreeNode> queue = new LinkedList<>();
        queue.add(root);
        int len;
        while(!queue.isEmpty()){
            double sum=0;
            len = queue.size();
            for(int i=0;i<len;i++){
                TreeNode temp = queue.poll();
                sum+=temp.val;
                if(temp.left!=null)
                    queue.add(temp.left);
                if(temp.right!=null)
                    queue.add(temp.right);
            }
            ans.add(sum/len);
            
        }
        
        
        return ans;
        
    }
}
